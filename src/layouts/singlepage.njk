{% extends "base.njk" %}

{% block side %}
  <p style="color: purple; position: absolute; left: -60px; top: 0; transform : rotate(90deg) ">single</p>
  {# {% include "_partials/readbuttons.njk" %} #}
{% endblock %}

{% block scripts %}{% endblock %}

{% block content %}
  <header>
    <h1 id="title">
        {% if toptitle %}
            <span class="top-title">{{toptitle}}</span>
        {% endif %}
        {{title}}
    </h1>
    {% if author or date %}
      <p class="meta">written 
        {% if author %}by <span class="author">{{author}}</span>{% endif %}
        {% if date %}on <time class="date">{{date | postDate }}</time>{% endif %}
      </p>        
    {% endif %}
  </header>  
  <article>
    {% if addIntro %}
      <p class="intro">{{intro}}
        {% if addTags %}
          {% if tags %}    
            <span class="tags">
              {% for tag in tags %}
                <a class=  "tag" href="">{{tag}}</a>
              {% endfor %}
            </span>
          {% endif %}        
        {% endif %}
    {% endif %}
    {{content | safe}}
  </article>
    {# {% if searchPaginator == "yes" %}
    {% from "addPaginator.njk" import searchPaginator with context %}
    {{searchPaginator()}}
  {% endif %} #}
{% endblock %}

